    <title>Product details</title>
</head>

<body>
    <header class="header">
        <%- include('partials/header.ejs') %>
    </header>
    <!-- <main class="formulario"> -->
    <main>

        <%= products %>
            <% for (const product of products ) { %>
                <!-- Se utiliza el for of para imprimir todos los autos -->

                <a href="/products/detail/<%= product.id %>">
                    <img src="/images/<%= product.image %>" alt="imagen de producto">
                    <!-- se pone la ruta en donde están las imágenes, ahí el data base va a decir "product1,2,3,...n.image", el cual tiene el nombre del archivo que coincidirá con el que estará en la carpeta images-->
                </a>

                <p>
                    <%= product.name %>
                </p>

                <p>
                    <%= product.price %>
                </p>

                <p>
                    <%= product.name %>
                </p>



                <% } %>
                    <img src="/images/logozebrablanco.png" alt="">
                    <h1 class="texto">
                        Página : /productDetails
                    </h1>


    </main>
    <footer>
        <%- include('partials/footer.ejs') %>
    </footer>

</body>